<resources>

    <!-- Base application theme. Theme.AppCompat.Light.DarkActionBar-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--让程序在初始化的时候窗口是透明的，初始化结束后程序主界面才会显示出来，避免白屏界面-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>

        <!--导航栏底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--导航栏上的标题颜色-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">@color/colorAccent</item>

        <!--和 colorAccent相反，正常状态下按钮的颜色-->
        <item name="colorControlNormal">@color/white</item>

        <!--Activity窗口的颜色-->
        <item name="android:windowBackground">@color/white</item>
        <!--Button按钮正常状态颜色-->
        <item name="colorButtonNormal">@color/grey_400</item>
        <!--EditText 输入框中字体的颜色-->
        <item name="editTextColor">@color/white</item>
        <!-- ListView/recycleView 分割线-->
        <item name="android:listDivider">@drawable/divider_bg</item>

        <item name="actionMenuTextColor">@color/grey_850</item>
        <item name="android:actionMenuTextColor">@color/grey_850</item>

    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <!--item name="android:windowFullscreen">?android:windowNoTitle</item-->
        <!--item name="colorPrimaryDark">@android:color/transparent</item-->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--item name="android:windowTranslucentStatus">true</item-->

    </style>


    <!--tv_home_menu -->
    <style name="tv_home_menu" parent="AppTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey_850</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="subscribe_my_tip_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/subscribe_tip_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="subscribe_seperate_line">
        <item name="android:background">@color/subscribe_seperate_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:layout_marginTop">14.0dip</item>
        <item name="android:layout_marginBottom">14.0dip</item>
    </style>

    <style name="subscribe_more_tip_text" parent="@style/subscribe_my_tip_text">
        <item name="android:textSize">13.0sp</item>
    </style>


    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
